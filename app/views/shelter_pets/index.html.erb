<h2>Pets at the <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h2>
<%= link_to "Add Pet", "/shelters/#{@shelter.id}/pets/new" %><br>
<% @shelter.pets.each do |pet| %>
<h4>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h4>
  <%= image_tag "#{pet.image}", class: "pet_img" %></br>
  Approx Age: <%= pet.approximate_age %></br>
  Sex: <%= pet.sex %></br>
<% end %>
